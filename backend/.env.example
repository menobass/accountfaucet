#############################################
# Hive Account Faucet Backend (.env example) #
#############################################
# Copy this file to .env and fill in real values.
# Do NOT commit the .env with real keys.

# Faucet operator account (must have claimed account creation tokens + small HBD for memo transfers)
CREATING_ACCOUNT_USERNAME=yourfaucet
CREATING_ACCOUNT_ACTIVE_KEY=5XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CREATING_ACCOUNT_POSTING_KEY=5XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CREATING_ACCOUNT_MEMO_KEY=5XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Hive node (optional override; code also uses a fallback array)
HIVE_NODE_URL=https://api.hive.blog

# Email (SMTP via Nodemailer) â€“ required if using email delivery
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=youraddress@gmail.com
EMAIL_PASS=app_password_here
EMAIL_FROM="Hive Faucet <youraddress@gmail.com>"

# Local testing (sanitized email test example)
TEST_RECIPIENT_EMAIL=

# Server
PORT=3000
NODE_ENV=production

# Resume / persistence (LAST_PROCESSED_BLOCK normally blank; auto resume uses data/last_block.json)
LAST_PROCESSED_BLOCK=
BLOCK_SAVE_INTERVAL=20

# Optional auth layer (future hardening)
API_AUTH_KEY=

# Reserved for future encryption utilities (not currently used)
ENCRYPTION_SECRET=

# NOTE:
# pending_credentials.json and last_block.json are runtime artifacts and are gitignored.

